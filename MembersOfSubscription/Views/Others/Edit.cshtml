@model Other

@{
	ViewData["Title"] = "Add Member";
}


<div class="container col-8">
<h1 class="text-primary">Edit Member</h1>
<form method="post">
	<div class="mb-3">
		<label asp-for="Name"></label>
		<input asp-for="Name" class="form-control"/>
        <span asp-validation-for="Name" class="text-danger"></span>
	</div>
	<div class="mb-3">
		<label asp-for="Age"></label>
		<input asp-for="Age" class="form-control"/>
        <span asp-validation-for="Age" class="text-danger"></span>
	</div>
	<div class="mb-3">
		<label asp-for="Weight"></label>
        <input asp-for="Weight" class="form-control" />
        <span asp-validation-for="Weight" class="text-danger"></span>
	</div>
	<div class="mb-3">
		<label asp-for="EyeColor"></label>
        <select asp-for="EyeColor" class="form-control">
            <option value="Blue">Blue</option>
            <option value="Green">Green</option>
            <option value="Brown">Brown</option>
			<option value="Grey">Grey</option>
            <option value="Other">Other</option>
        </select>
        <span asp-validation-for="EyeColor" class="text-danger"></span>
	</div>
	<button type="submit" class="btn btn-primary" style="width:150px">Edit</button>
	<a asp-controller="Others" asp-action="Index" class="btn btn-secondary"
	style="width:150px">Cancel</a>
</form>
</div>

@section Scripts{
@{
    <partial name="_ValidationScriptsPartial" />
}
}